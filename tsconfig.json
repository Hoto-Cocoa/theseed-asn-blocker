{
  "compilerOptions": {
    "target": "esnext",
    "module": "node16",
    "strict": false,
    "importHelpers": false,
    "moduleResolution": "node16",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist",
    "declaration": true,
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
  ],
}
